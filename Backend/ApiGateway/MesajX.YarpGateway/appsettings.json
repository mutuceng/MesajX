{
  "ReverseProxy": {
    "Routes": {
      "chat": {
        "ClusterId": "chatCluster",
        "Match": {
          "Path": "/chat/{**catch-all}"
        }
      },
      "user": {
        "ClusterId": "userCluster",
        "Match": {
          "Path": "/user/{**catch-all}"
        }
      },
      "notification": {
        "ClusterId": "notificationCluster",
        "Match": {
          "Path": "/notification/{**catch-all}"
        }
      },
      "signalr": {
        "ClusterId": "signalrCluster",
        "Match": {
          "Path": "/hubs/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "chatCluster": {
        "Destinations": {
          "chatService": {
            "Address": "http://localhost:5280/"
          }
        }
      },
      "userCluster": {
        "Destinations": {
          "userService": {
            "Address": "http://localhost:5011/"
          }
        }
      },
      "notificationCluster": {
        "Destinations": {
          "notificationService": {
            "Address": "http://localhost:5178/"
          }
        }
      },
      "signalrCluster": {
        "Destinations": {
          "signalrService": {
            "Address": "http://localhost:5001/"
          }
        }
      }
    }
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
